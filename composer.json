{
  "name": "lucacracco/robo-drupal",
  "description": "A my custom Robo task runner for Drupal.",
  "type": "robo-tasks",
  "keywords": [
    "drupal",
    "deployment",
    "automation"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Luca Cracco",
      "email": "craccoluca@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.3",
    "consolidation/robo": "~2",
    "drush/drush": "^9.7.1 | ^10.0.0",
    "grasmash/yaml-expander": "^1.4",
    "webflo/drupal-finder": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "LucaCracco\\RoboDrupal\\": "./src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "drupal/core-composer-scaffold": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
